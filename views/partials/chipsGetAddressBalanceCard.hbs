<div class="card" id="verus-chips-get-address-balance-card">
    CHIPS
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Address Balance</div>
        {{#if chipsOnline}}

        <div class="card-sub-title">Verus address</div>
        <div class="card-sub-title-value"><input id="get-chips-address-balance" class="card-input"
                value="{{{getChipsAddress}}}"></div>

        {{#each getChipsAddressBalanceArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{currencyName}}}</div>
            <div class="card-row-item">{{{amount}}} </div>
        </div>
        {{/each}}

        {{else}}
        {{{chipsStatusMessage}}}
        {{/if}}

    </div>
</div>