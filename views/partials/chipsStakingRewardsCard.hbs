<div class="card" id="chips-staking-rewards-card">
    CHIPS
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Staking Rewards</div>
        {{#if chipsOnline}}

        <div class="card-sub-title">Staking Amount</div>
        <div class="card-sub-title-value"><input id="chips-staking-amount" class="card-input"
                value="{{{chipsStakingAmount}}}"></div>

        {{#each chipsStakingRewardsArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{label}}}</div>
            <div class="card-row-item-network">{{{rewards}}} CHIPS</div>
            <div class="card-row-item"> $ {{{dollars}}} </div>
        </div>

        {{/each}}
        <br>
        <div class="card-row-wrapper">
            <div class="card-row-item">Staking APY</div>
            <div class="card-row-item"> {{{chipsStakingAPY}}} %</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Staking Supply</div>
            <div class="card-row-item"> {{{chipsStakingSupply}}} </div>
        </div>

        {{else}}
        {{{chipsStatusMessage}}}
        {{/if}}

    </div>
</div>