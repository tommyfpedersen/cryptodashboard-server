<div class="card" id="prices-card-chips">
    <img width="16px" src="/img/chips-logo-emblem.png" />
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Chips</div>
        {{#if vrscOnline}}
        {{#each chipsPriceArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{origin}}}</div>
            <div class="card-row-item-network">{{{network}}}</div>
            <div class="card-row-item">
                $ {{{price}}}
            </div>
        </div>
        {{/each}}
        <br>

        <div class="card-row-wrapper">
            <div class="card-row-item">Chips in baskets</div>
            <div class="card-row-item">
                {{{chipsReserve}}}
            </div>
        </div>

        <div class="card-row-wrapper">
            <div class="card-row-item">Chips value in baskets</div>
            <div class="card-row-item">
                $ {{{chipsReserveValue}}}
            </div>
        </div>
        {{else}}
        {{{vrscStatusMessage}}}
        {{/if}}
    </div>
</div>