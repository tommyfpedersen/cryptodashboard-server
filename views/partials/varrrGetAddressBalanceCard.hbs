<div class="card" id="verus-varrr-get-address-balance-card">
    <img width="16px" src="/img/Pirate_Logo_Coin_Gold.png" />
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Address Balance</div>
        {{#if varrrOnline}}

        <div class="card-sub-title">Verus address</div>
        <div class="card-sub-title-value"><input id="get-varrr-address-balance" class="card-input"
                value="{{{getVarrrAddress}}}"></div>

        {{#each getVarrrAddressBalanceArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{currencyName}}}</div>
            <div class="card-row-item">{{{amount}}} </div>
        </div>
        {{/each}}

        {{else}}
        {{{varrrStatusMessage}}}
        {{/if}}

    </div>
</div>