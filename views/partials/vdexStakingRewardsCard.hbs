<div class="card" id="vdex-staking-rewards-card">
    {{!-- <img width="16px" src="/img/Pirate_Logo_Coin_Gold.png" /> --}}
    vDEX
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Staking Rewards</div>
        {{#if vdexOnline}}

        <div class="card-sub-title">Staking Amount</div>
        <div class="card-sub-title-value"><input id="vdex-staking-amount" class="card-input"
                value="{{{vdexStakingAmount}}}"></div>

        {{#each vdexStakingRewardsArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{label}}}</div>
            <div class="card-row-item-network">{{{rewards}}} vDEX</div>
            <div class="card-row-item"> $ {{{dollars}}} </div>
        </div>

        {{/each}}
        <br>
        <div class="card-row-wrapper">
            <div class="card-row-item">Staking APY</div>
            <div class="card-row-item"> {{{vdexStakingAPY}}} %</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Staking Supply</div>
            <div class="card-row-item"> {{{vdexStakingSupply}}} </div>
        </div>

        {{else}}
        {{{vdexStatusMessage}}}
        {{/if}}

    </div>
</div>