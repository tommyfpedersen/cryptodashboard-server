<div class="card" id="verus-chips-block-and-fee-pool-rewards-card">
    {{!-- <img width="16px" src="/img/Pirate_Logo_Coin_Gold.png" /> --}}
    CHIPS
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Block and Fee Pool Rewards</div>
        {{#if chipsOnline}}

        <div class="card-row-wrapper">
            <div class="card-row-item">Block Height</div>
            <div class="card-row-item"> {{{chipsblocks}}}</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Last Block Send</div>
            <div class="card-row-item"> {{{chipsblockLastSend}}}</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Block Reward</div>
            <div class="card-row-item"> {{{chipsblockReward}}} CHIPS</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Fee Pool Reward</div>
            <div class="card-row-item"> {{{chipsfeeReward}}} CHIPS</div>
        </div>
        <div class="card-row-wrapper">
            <div class="card-row-item">Average Block Fees</div>
            <div class="card-row-item"> {{{chipsaverageblockfees}}} CHIPS</div>
        </div>

        {{else}}
        {{{chipsStatusMessage}}}
        {{/if}}

    </div>

</div>