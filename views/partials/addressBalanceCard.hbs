<div class="card" id="{{blockchain}}-address-balance-card">
    <img width="16px" src="{{icon}}" />
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Address Balance</div>
       
        <div class="card-sub-title">{{blockchain}} address</div>
        <div class="card-sub-title-value"><input id="{{blockchain}}-address-balance" class="card-input" value="{{{lookupAddress}}}">
        </div>

        {{#each this.addressBalanceArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{this.currencyName}}}</div>
            <div class="card-row-item">
                {{{this.amount}}}
            </div>
        </div>

        {{/each}}


    </div>
</div>