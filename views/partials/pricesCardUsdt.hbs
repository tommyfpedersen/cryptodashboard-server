<div class="card" id="prices-card-usdt">
    <img width="16px" src="/img/usdt.png" />
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Tether</div>
        {{#if vrscOnline}}
        {{#each usdtPriceArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{origin}}}</div>
            <div class="card-row-item-network">{{{network}}}</div>
            <div class="card-row-item">
                $ {{{price}}}
            </div>
        </div>
        {{/each}}
        <br>

        <div class="card-row-wrapper">
            <div class="card-row-item">USDT in baskets</div>
            <div class="card-row-item">
                {{{usdtReserve}}}
            </div>
        </div>

        <div class="card-row-wrapper">
            <div class="card-row-item">USDT value in baskets</div>
            <div class="card-row-item">
                $ {{{usdtReserveValue}}}
            </div>
        </div>
        {{else}}
        {{{vrscStatusMessage}}}
        {{/if}}
    </div>
</div>