<div class="card" id="vdex-mining-rewards-card">
    {{!-- <img width="16px" src="/img/Pirate_Logo_Coin_Gold.png" /> --}}
    vDEX
    <button class="hide-button">x</button>
    <div class="card-content">
        <div class="card-title">Mining Rewards</div>
        {{#if vdexOnline}}

        <div class="card-sub-title">MH/s</div>
        <div class="card-sub-title-value"><input id="vdex-mining-hash" class="card-input" value="{{{vdexMiningHash}}}">
        </div>

        {{#each vdexMiningRewardsArray}}
        <div class="card-row-wrapper">
            <div class="card-row-item">{{{label}}}</div>
            <div class="card-row-item-network">{{{rewards}}} vDEX</div>
            <div class="card-row-item"> $ {{{dollars}}} </div>
        </div>

        {{/each}}

        <br>
        <div class="card-row-wrapper">
            <div class="card-row-item">Network Hashrate</div>
            <div class="card-row-item"> {{{vdexNetworkHash}}} GH/s </div>
        </div>

        {{else}}
        {{{vdexStatusMessage}}}
        {{/if}}

    </div>
</div>